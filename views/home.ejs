        <div class="container d-flex align-items-center flex-column">
            <div class="container" style="width:100%;">
                <div id="left">
                    <img class="masthead-avatar mb-5" src="assets/img/avataaars.svg" alt="..." />
                    <!-- Masthead Heading-->
                    <h1 class="masthead-heading text-uppercase mb-0">
                        <%= profile %>
                    </h1>
                    <!-- Icon Divider-->
                    <div class="divider-custom divider-light">
                        <div class="divider-custom-line"></div>
                        <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
                        <div class="divider-custom-line"></div>
                    </div>
                </div>

                <% if(reqstatus==null){ %>
                    <div id="right">
                        <br><br>
                        <p>Click to send a request to return to campus</p>
                        <button class="req_btn"><a id="request_button" href="/request">Raise a Request</a></button>
                    </div>
                    <% } 
                else if(reqstatus=="admin"){ %>
                    <div id="right">
                        <br><br>
                        <h2>Welocme Admin</h2>
                        <p> Click Below to See all requests</p>
                        <button class="req_btn"><a id="request_button" href="/adminrequests">Requests</a></button>
                    </div>
                    <% } 

                        else if(reqstatus=="reqmade" ){ %>
